<Window x:Class="Todo_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Todo_App"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Height="350" Width="525">
        <ListBox Name="LbxTasks" HorizontalAlignment="Left" Height="299" Margin="10,10,0,0" VerticalAlignment="Top" Width="257" SelectionChanged="ListBox_SelectionChanged"/>
        <TextBox Name="TbtInput" FontSize="22"  HorizontalAlignment="Left" Height="30" Margin="272,10,0,0" TextWrapping="Wrap" Text="Enter a task" VerticalAlignment="Top" Width="224" KeyDown="tbtInput_KeyDown"/>
        <Button Name="BtnAdd" Content="Add" HorizontalAlignment="Left" IsEnabled="False" Height="32" Margin="283,65,0,0" VerticalAlignment="Top" Width="84" Click="btnAdd_Click"/>
        <Button Name="BtnDelete" Content="Delete" HorizontalAlignment="Left" IsEnabled="False" Height="32" Margin="384,65,0,0" VerticalAlignment="Top" Width="84" Click="btnDelete_Click"/>
    </Grid>
</Window>
